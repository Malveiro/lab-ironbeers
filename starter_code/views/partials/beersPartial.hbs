<div class="card" style="width: 1000px">
  <img class="card-img-top" src="{{this.image_url}}" width="100px" alt="Card image cap">
  <div class="card-body">
    <h2 class="card-title">{{this.name}}</h2>
    <p class="tag">{{this.tagline}}</p>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>